type Message = {
  id: string;
  author: "You" | "Stranger";
  text: string;
  ts: number;
};

type ChatBotState = {
  isEnabled: boolean;
  conversationHistory: ChatMessage[];
};

type Conversation = {
  id: string;
  createdAt: number;
  messages: Message[];
  compliments?: { person1: string; person2: string };
  votes?: { p1: number; p2: number };
